<%= simple_form_for bill, html: { class: "bill form" } do |f| %>
  <% if bill.errors.any? %>
    <div class="error-message">
      <%= bill.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <p> Reference number: </p>
  <%= f.input :reference, input_html: { autofocus: true } %><br>
  <p> Amount in kWh: </p>
  <%= f.input :amount, input_html: { autofocus: true } %><br>
  <%= f.submit class: "btn btn-primary" %><br>
<% end %>
